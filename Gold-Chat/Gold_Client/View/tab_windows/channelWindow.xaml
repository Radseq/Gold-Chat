<UserControl x:Class="Gold_Client.View.tab_windows.channelWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewModel="clr-namespace:Gold_Client.ViewModel.tab_windows" mc:Ignorable="d"
             d:DesignWidth="500" Height="267.5"
             d:DataContext="{d:DesignInstance ViewModel:ChannelWindowPresenter}">
    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding SendChannelMsgCommand}"/>
    </UserControl.InputBindings>
    <Grid>
        <TextBox Text="{Binding ChannelMsgRe}" HorizontalAlignment="Left" Height="208" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="375" IsEnabled="False"/>
        <TextBox Text="{Binding ChannelMsgToSend, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="35" Margin="10,223,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="480"/>
        <ListBox ItemsSource="{Binding ChannelUsers}" HorizontalAlignment="Left" Height="208" Margin="390,10,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</UserControl>

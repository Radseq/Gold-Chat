<Window x:Class="Gold_Client.View.PrivateMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:Gold_Client.ViewModel"
        xmlns:View="clr-namespace:Gold_Client.View"
        Title="{Binding PrivateWindowTitle}"
        MinWidth="300"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <Window.DataContext>
        <ViewModel:PrivateMessagePresenter />
    </Window.DataContext>
    <View:PrivateMessageControl/>
</Window>

<UserControl x:Class="Gold_Client.View.TabWindows.ChannelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewModel="clr-namespace:Gold_Client.ViewModel.TabWindows" mc:Ignorable="d"
             d:DesignWidth="425" Height="267.5"
             d:DataContext="{d:DesignInstance ViewModel:ChannelPresenter}">
    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding SendChannelMsgCommand}"/>
    </UserControl.InputBindings>
    <Grid>
        <TextBox Text="{Binding ChannelMsgRe}" HorizontalAlignment="Left" Height="208" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" IsEnabled="False"/>
        <TextBox Text="{Binding ChannelMsgToSend, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="35" Margin="10,223,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="405"/>
        <ListBox ItemsSource="{Binding ChannelUsers}" HorizontalAlignment="Left" Height="208" Margin="315,10,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</UserControl>

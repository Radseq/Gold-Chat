<UserControl x:Class="Gold_Client.View.TabWindows.MainContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewModel="clr-namespace:Gold_Client.ViewModel.TabWindows" mc:Ignorable="d"
             d:DesignWidth="400" Height="250"
             d:DataContext="{d:DesignInstance ViewModel:MainContentPresenter}">
    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding MessageCommand}"/>
    </UserControl.InputBindings>
    <Grid>
        <TextBox Text="{Binding IncomeMessageTB, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False" TextWrapping="Wrap" Margin="10,10,10,60" />
        <TextBox Text="{Binding OutcomeMessageTB, UpdateSourceTrigger=PropertyChanged}" Margin="10,195,86,10"/>
        <Button Content="Send" Command="{Binding MessageCommand}" Margin="319,195,10,10" />
    </Grid>
</UserControl>

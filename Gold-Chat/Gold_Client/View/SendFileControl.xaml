<UserControl x:Class="Gold_Client.View.SendFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gold_Client.View"
             mc:Ignorable="d" d:DesignWidth="300" Height="101.695">
    <Grid>
        <Button Content="Browse..." HorizontalAlignment="Left" Command="{Binding BrowseFileCommand}" Margin="215,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="File:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,42,0,0" Text="{Binding FilePatchTextBox, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>
        <Button Content="Send File" HorizontalAlignment="Left" Command="{Binding SendFileCommand}" Margin="215,72,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="{Binding SendingStep}" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>

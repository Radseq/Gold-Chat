<UserControl x:Class="Gold_Client.View.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ViewModel="clr-namespace:Gold_Client.ViewModel" mc:Ignorable="d"
             d:DesignWidth="282" 
             d:DataContext="{d:DesignInstance ViewModel:LoginPresenter}" Height="106">
    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
    </UserControl.InputBindings>
    <Grid>
        <Label Foreground="Blue" Margin="37,1,201,79" Content="Login:"/>
        <Label Foreground="Blue" Margin="19,36,201,44" Content="Password:"/>
        <TextBox Text="{Binding LoginTB, UpdateSourceTrigger=PropertyChanged}" Margin="86,1,29,79"/>
        <PasswordBox Name="passBox" PasswordChanged="PasswordChanged" Margin="86,36,29,44"/>
        <Button Command="{Binding RegistrationWindowCommand}" Margin="5,73,185,4" Content="Registration"/>
        <Button Command="{Binding LostPasswordWindowCommand}" Margin="102,73,91,4" Content="Lost Password"/>
        <Button Content="Login" Command="{Binding LoginCommand}" Margin="196,73,5,4"/>
    </Grid>
</UserControl>

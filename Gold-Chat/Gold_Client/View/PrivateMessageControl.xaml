<UserControl x:Class="Gold_Client.View.PrivateMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:ViewModel="clr-namespace:Gold_Client.ViewModel" mc:Ignorable="d"
             d:DesignWidth="282" 
             d:DataContext="{d:DesignInstance ViewModel:PrivateMessagePresenter}" Height="269">
    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding SendPrivateMessageCommand}"/>
    </UserControl.InputBindings>
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="224" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding IncomePrivMessage, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="272" IsEnabled="False"/>
        <TextBox Text="{Binding OutGoingPrivMessage, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="10,239,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272"/>
    </Grid>
</UserControl>
